<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bulbOption"
    android:background="@color/offWhite"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp">

    <ImageView
        android:id="@+id/BulbImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/BulbName"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/BulbImage"
        android:layout_toRightOf="@+id/BulbImage"
        android:text=""
        android:textSize="22sp"
        android:textColor="@color/black"
        android:paddingEnd="0dp"
        android:paddingStart="10dp" />

    <ImageView
        android:id="@+id/separator"
        android:background="@color/deepRed"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignLeft="@+id/BulbName"
        android:layout_alignStart="@+id/BulbName"
        android:layout_below="@+id/BulbName"
        />
</RelativeLayout>