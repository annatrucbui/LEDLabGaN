<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_laboratory"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id = "@+id/TitleBanner"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <cambridge.materials.galliumnitride.app.ledlab.SquareFromWidthImageButton
            android:id="@+id/backButton"
            android:background="@drawable/ic_button_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <include
            layout="@layout/title_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@+id/backButton"
            app:layout_constraintRight_toLeftOf="@+id/homeButton"
            app:layout_constraintTop_toTopOf="parent"/>

        <cambridge.materials.galliumnitride.app.ledlab.SquareFromWidthImageButton
            android:id="@+id/homeButton"
            android:background="@drawable/ic_button_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/LEDSwitchTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/LEDSwitchTitle"
        android:textSize="56sp"
        android:textColor="@color/indigo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleBanner"/>

    <RelativeLayout
        android:id="@+id/InputBox"
        android:background="@drawable/experiment_led_switch_rounded_box"
        android:gravity="top"
        android:paddingLeft="0dp"
        android:paddingRight="15dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:paddingEnd="15dp"
        android:paddingStart="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ResultBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LEDSwitchTitle">

        <TextView
            android:id="@+id/Explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:text="@string/Explanation"
            android:textSize="18sp"
            android:textColor="@color/darkGrey"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/Explanation"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/CurrentBulbText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/CurrentBulbText"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/CurrentBulbOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/CurrentBulbText"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/NewBulbText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/CurrentBulbOption"
                android:text="@string/NewBulbText"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/LEDBulbType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="1dp"
                android:layout_alignBottom="@+id/NewBulbText"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/NewBulbText"
                android:layout_toRightOf="@+id/NewBulbText"
                android:text="@string/LEDBulbText"
                android:textSize="32sp"
                android:textColor="@color/cherryRed"/>

            <TextView
                android:id="@+id/BulbNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/NewBulbText"
                android:text="@string/BulbNumberText"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/BulbNumberInput"
                android:background="@color/offWhite"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_alignBaseline="@id/BulbNumberText"
                android:layout_below="@id/NewBulbText"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/BulbNumberText"
                android:layout_toRightOf="@id/BulbNumberText"
                android:text=""
                android:textSize="28sp"
                android:textColor="@color/red"
                android:inputType="number"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ResultBox"
        android:background="@drawable/experiment_led_switch_rounded_box"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InputBox">

        <TextView
            android:id="@+id/CurrentTextView"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.1"
            app:layout_constraintBottom_toTopOf="@+id/WithLEDTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/WithLEDTextView"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.1"
            app:layout_constraintBottom_toTopOf="@+id/SavingsTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CurrentTextView"/>

        <TextView
            android:id="@+id/SavingsTextView"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WithLEDTextView"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
